<Page
    x:Class="Barroc_Intense.Pages.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localData="using:Barroc_Intense.Data"
    mc:Ignorable="d">

    <Grid>
        <!-- BACKGROUND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- MAIN CARD -->
        <Border Background="White"
                CornerRadius="25"
                Padding="40"
                Margin="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                MaxWidth="900">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <!-- Grid i.p.v. StackPanel voor full width stretching -->
                <Grid Margin="0" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Spacing="18" HorizontalAlignment="Stretch">

                        <!-- PAGE TITLE -->
                        <TextBlock Text="Productbeheer"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"/>

                        <!-- PRODUCT NAAM -->
                        <TextBlock Text="Productnaam" FontWeight="SemiBold" Foreground="Black"/>
                        <TextBox x:Name="productNameTextBox" Padding="12" CornerRadius="10" Foreground="Black"
                                 BorderBrush="#CCCCCC" BorderThickness="1"
                                 HorizontalAlignment="Stretch"/>

                        <!-- LEASE CONTRACT -->
                        <TextBlock Text="Lease Contract" FontWeight="SemiBold" Foreground="Black"/>
                        <TextBox x:Name="leaseContractTextBox" Padding="12" CornerRadius="10" Foreground="Black"
                                 BorderBrush="#CCCCCC" BorderThickness="1"
                                 HorizontalAlignment="Stretch"/>

                        <!-- REPARATIE KOSTEN -->
                        <TextBlock Text="Reparatie kosten" FontWeight="SemiBold" Foreground="Black"/>
                        <TextBox x:Name="installationCostTextBox" Padding="12" CornerRadius="10" Foreground="Black"
                                 BorderBrush="#CCCCCC" BorderThickness="1"
                                 HorizontalAlignment="Stretch"/>

                        <!-- PRIJS PER KG -->
                        <TextBlock Text="Prijs per Kg" FontWeight="SemiBold" Foreground="Black"/>
                        <TextBox x:Name="priceTextBox" Padding="12" CornerRadius="10" Foreground="Black"
                                 BorderBrush="#CCCCCC" BorderThickness="1"
                                 HorizontalAlignment="Stretch"/>

                        <!-- VOORRAAD -->
                        <TextBlock Text="Voorraad" FontWeight="SemiBold" Foreground="Black"/>
                        <TextBox x:Name="stockTextBox" Padding="12" CornerRadius="10" Foreground="Black"
                                 BorderBrush="#CCCCCC" BorderThickness="1"
                                 HorizontalAlignment="Stretch"/>

                        <!-- IN GEBRUIK -->
                        <TextBlock Text="In Gebruik" FontWeight="SemiBold" Foreground="Black"/>
                        <TextBox x:Name="UsedTextBox" Padding="12" CornerRadius="10" Foreground="Black"
                                 BorderBrush="#CCCCCC" BorderThickness="1"
                                 HorizontalAlignment="Stretch"/>

                        <!-- CATEGORIE -->
                        <TextBlock Text="Categorie" FontWeight="SemiBold" Foreground="Black"/>
                        <ComboBox x:Name="categoryComboBox"
                                  Padding="12"
                                  CornerRadius="10"
                                  BorderBrush="#CCCCCC"
                                  BorderThickness="1"
                                  Foreground="Black"
                                  HorizontalAlignment="Stretch"/>

                        <!-- INGREDIËNTEN -->
                        <StackPanel x:Name="ingredientsPanel" Visibility="Collapsed" Spacing="10">
                            <TextBlock Text="Ingrediënten" FontWeight="Bold" FontSize="18" Foreground="Black"/>
                            <ItemsControl x:Name="ingredientsListControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="localData:Ingredient">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBox Text="{x:Bind Name, Mode=TwoWay}" Width="200" Padding="12" CornerRadius="10"
                                                     BorderBrush="#CCCCCC" BorderThickness="1" Foreground="Black" HorizontalAlignment="Stretch"
                                                     PlaceholderText="Naam ingredient"/>
                                            <TextBox Text="{x:Bind AmountText, Mode=TwoWay}" Width="80" Padding="12" CornerRadius="10"
                                                     BorderBrush="#CCCCCC" BorderThickness="1" Foreground="Black" HorizontalAlignment="Stretch"
                                                     PlaceholderText="Kg"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button Content="➕ Voeg ingredient toe"
                                    Click="AddIngredientButton_Click"
                                    Background="#FFD700"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    Width="200"
                                    Height="40"
                                    BorderThickness="0"
                                    CornerRadius="10"/>
                        </StackPanel>

                        <!-- VALIDATION -->
                        <TextBlock x:Name="validationResultsTextBlock"
                                   Foreground="Red"
                                   TextWrapping="Wrap"
                                   FontSize="14"/>

                        <!-- ACTION BUTTONS -->
                        <Button Content="Opslaan"
                                Click="saveButton_Click"
                                Background="#FFD700"
                                Foreground="Black"
                                FontWeight="Bold"
                                Height="50"
                                CornerRadius="10"
                                HorizontalAlignment="Center"/>

                        <Button Content="Terug naar Overzicht"
                                Click="BackButton_Click"
                                Background="Gray"
                                Foreground="White"
                                FontWeight="Bold"
                                Height="50"
                                CornerRadius="10"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>