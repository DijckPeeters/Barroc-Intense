<Page
    x:Class="Barroc_Intense.Pages.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:localData="using:Barroc_Intense.Data"
    mc:Ignorable="d">
    <Grid>
        <!-- Gradient achtergrond -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!-- Semi-transparante container -->
        <Border Background="#AAFFFFFF"
                CornerRadius="25"
                Padding="40"
                Margin="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <StackPanel Padding="20"
                            Spacing="15"
                            HorizontalAlignment="Center"
                            Width="400">
                    <!-- Titel -->
                    <TextBlock Text="Productbeheer"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <!-- Productvelden -->
                    <TextBox x:Name="productNameTextBox"
                             Header="Productnaam:"
                             FontSize="16"
                             BorderBrush="Black"
                             BorderThickness="1"
                             CornerRadius="10"
                             Padding="8"/>
                    <TextBox x:Name="leaseContractTextBox"
                             Header="Lease Contract:"
                             FontSize="16"
                             BorderBrush="Black"
                             BorderThickness="1"
                             CornerRadius="10"
                             Padding="8"/>
                    <TextBox x:Name="installationCostTextBox"
                             Header="Reparatie kosten :"
                             FontSize="16"
                             BorderBrush="Black"
                             BorderThickness="1"
                             CornerRadius="10"
                             Padding="8"
                             InputScope="Number"/>
                    <TextBox x:Name="priceTextBox"
                             Header="Prijs per Kg:"
                             FontSize="16"
                             BorderBrush="Black"
                             BorderThickness="1"
                             CornerRadius="10"
                             Padding="8"
                             InputScope="Number"/>
                    <ComboBox x:Name="categoryComboBox"
                              Header="Categorie:"
                              FontSize="16"
                              SelectionChanged="categoryComboBox_SelectionChanged"
                              BorderBrush="Black"
                              BorderThickness="1"
                              CornerRadius="10"
                              Padding="8"
                              Width="400"/>
                    <!-- Ingrediënten sectie, alleen zichtbaar bij Koffiebonen -->
                    <StackPanel x:Name="ingredientsPanel" Visibility="Collapsed" Spacing="10">
                        <TextBlock Text="Ingrediënten" FontWeight="Bold" FontSize="18" Foreground="Black"/>
                        <!-- ItemsControl voor bestaande ingredienten -->
                        <ItemsControl x:Name="ingredientsListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="localData:Ingredient">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBox Text="{x:Bind Name, Mode=TwoWay}" Width="200" PlaceholderText="Naam ingredient"/>
                                        <TextBox Text="{x:Bind AmountText, Mode=TwoWay}" Width="80" PlaceholderText="Kg"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <!-- Knop om nieuwe ingredient toe te voegen -->
                        <Button Content="➕ Voeg ingredient toe"
                                Click="AddIngredientButton_Click"
                                Background="Black"
                                Foreground="Yellow"
                                FontWeight="Bold"
                                Width="200"
                                Height="40"
                                BorderThickness="0"
                                CornerRadius="10"/>
                    </StackPanel>
                    <TextBox x:Name="stockTextBox"
                             Header="Voorraad:"
                             FontSize="16"
                             BorderBrush="Black"
                             BorderThickness="1"
                             CornerRadius="10"
                             Padding="8"
                             InputScope="Number"/>
                    <TextBox x:Name="UsedTextBox"
                             Header="In Gebruik:"
                             FontSize="16"
                             BorderBrush="Black"
                             BorderThickness="1"
                             CornerRadius="10"
                             Padding="8"
                             InputScope="Number"/>
                    <!-- Validatieresultaten -->
                    <TextBlock x:Name="validationResultsTextBlock"
                               Foreground="DarkRed"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Margin="0,10,0,0"/>
                    <!-- Opslaan-knop -->
                    <Button x:Name="saveButton"
                            Content="Opslaan"
                            Click="saveButton_Click"
                            Background="Black"
                            Foreground="Yellow"
                            FontSize="18"
                            FontWeight="Bold"
                            Height="45"
                            Margin="0,10,0,0"
                            BorderThickness="0"
                            CornerRadius="10"
                            HorizontalAlignment="Center"
                            Width="200"/>

                    <!-- Foutmelding -->
                    <TextBlock x:Name="errorsTextBlock"
                               Foreground="Red"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                    <!-- Navigatie-knoppen -->
                    <StackPanel Margin="0,30,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="10">
                        <TextBlock Text="Wil je geen product toevoegen?"
                                   FontSize="16"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"/>
                        <Button x:Name="goToStockButton"
                                Content="Ga naar voorraadpagina"
                                Click="goToStockButton_Click"
                                Background="Yellow"
                                Foreground="Black"
                                FontSize="16"
                                FontWeight="Bold"
                                Width="220"
                                Height="40"
                                CornerRadius="10"
                                BorderThickness="0"/>
                        <Button Content="Terug naar dashboard"
                                Click="BackButton_Click"
                                Background="Black"
                                Foreground="Yellow"
                                FontWeight="Bold"
                                Width="220"
                                Height="45"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                BorderThickness="0"
                                CornerRadius="10"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>