<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.DeliveryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- Achtergrond -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Layout: links lijst, rechts details -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- LEVERINGEN LIJST     -->
        <!-- ===================== -->
        <Border Background="#EEFFFFFF"
                CornerRadius="20"
                Margin="30">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Leveringen"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="10"
                            Margin="0,0,0,15">

                    <Button Content="➕ Nieuwe levering"
                            Width="220"
                            Height="45"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            CornerRadius="10"
                            BorderThickness="0"
                            Click="AddDeliveryButton_Click"/>

                    <Button x:Name="filterButton"
                            Content=" Filter status"
                            Width="180"
                            Height="45"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            CornerRadius="10"
                            BorderThickness="0">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Alle" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Not planned" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Planned" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Underway" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Delivered" Click="FilterMenuItem_Click"/>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

                <ScrollViewer Grid.Row="2">
                    <ListView x:Name="deliveryListView"
                              SelectionMode="Single"
                              IsItemClickEnabled="True"
                              ItemClick="DeliveryListView_ItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFFBEF"
                                        CornerRadius="10"
                                        Padding="12"
                                        Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProductName}"
                                                   FontSize="18"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CustomerName}"
                                                   FontSize="14"
                                                   Foreground="Gray"/>
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="14"
                                                   Foreground="DarkOrange"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>

                <Button Grid.Row="3"
                        Content="⬅️ Terug naar dashboard"
                        Width="220"
                        Height="45"
                        Background="Black"
                        Foreground="Yellow"
                        FontWeight="Bold"
                        CornerRadius="10"
                        BorderThickness="0"
                        Margin="0,15,0,0"
                        Click="BackToDashboardButton_Click"/>
            </Grid>
        </Border>

        <!-- ===================== -->
        <!-- DETAILS              -->
        <!-- ===================== -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="20"
                Margin="30">

            <Grid>
                <TextBlock x:Name="placeholderText"
                           Text="Selecteer een levering voor details"
                           FontSize="20"
                           FontStyle="Italic"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <ScrollViewer>
                    <StackPanel x:Name="detailsPanel"
                                Margin="30"
                                Spacing="15"
                                Visibility="Collapsed">

                        <TextBlock Text="Leveringsdetails"
                                   FontSize="30"
                                   FontWeight="Bold"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Productnaam:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailProductName" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Aantal geleverd:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailQuantity" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Klantnaam:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailCustomerName" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Afleveradres:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailAddress" Width="250" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Status:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailStatus" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Geplande leveringsdatum:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailPlannedDate" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Werkelijke leveringsdatum:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailActualDate" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Vervoerder:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailCarrier" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Naam chauffeur:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailDriver" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Trackingnummer:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailTrackingNumber" Width="250"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Opmerkingen:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="detailNotes" Width="250" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="10"
                                    Margin="0,20,0,0">

                            <Button Content="✏️ Aanpassen"
                                    Width="180"
                                    Height="45"
                                    Background="DarkOrange"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    CornerRadius="10"
                                    BorderThickness="0"
                                    Click="EditDeliveryButton_Click"/>

                            <Button Content="❌ Verwijderen"
                                    Width="180"
                                    Height="45"
                                    Background="DarkRed"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    CornerRadius="10"
                                    BorderThickness="0"
                                    Click="DeleteDeliveryButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>