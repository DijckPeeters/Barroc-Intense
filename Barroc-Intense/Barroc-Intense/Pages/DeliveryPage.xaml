<Page
    x:Class="Barroc_Intense.Pages.DeliveryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- BACKGROUND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- LAYOUT GRID -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEVERINGEN LIJST -->
        <Border Background="#FFFFFF"
                CornerRadius="20"
                Margin="30"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Leveringen"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,10"/>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="10"
                            Margin="0,0,0,15">

                    <Button Content="➕ Nieuwe levering"
                            Width="220"
                            Height="45"
                            Background="#FFD700"
                            Foreground="Black"
                            FontWeight="Bold"
                            CornerRadius="10"
                            BorderThickness="0"
                            Click="AddDeliveryButton_Click"/>

                    <Button x:Name="filterButton"
                            Content=" Filter status"
                            Width="180"
                            Height="45"
                            Background="#FFD700"
                            Foreground="Black"
                            FontWeight="Bold"
                            CornerRadius="10"
                            BorderThickness="0">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Alle" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Not planned" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Planned" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Underway" Click="FilterMenuItem_Click"/>
                                <MenuFlyoutItem Text="Delivered" Click="FilterMenuItem_Click"/>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

                <ScrollViewer Grid.Row="2">
                    <ListView x:Name="deliveryListView"
                              SelectionMode="Single"
                              IsItemClickEnabled="True"
                              ItemClick="DeliveryListView_ItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF9F9F9"
                                        CornerRadius="16"
                                        Padding="16"
                                        Margin="0,0,0,14"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProductName}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="Black"/>
                                        <TextBlock Text="{Binding CustomerName}"
                                                   FontSize="14"
                                                   Foreground="Black"/>
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="14"
                                                   Foreground="Orange"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>

                <Button Grid.Row="3"
                        Content="⬅️ Terug naar dashboard"
                        Width="220"
                        Height="45"
                        Background="#FFD700"
                        Foreground="Black"
                        FontWeight="Bold"
                        CornerRadius="10"
                        BorderThickness="0"
                        Margin="0,15,0,0"
                        Click="BackToDashboardButton_Click"/>
            </Grid>
        </Border>

        <!-- DETAILS PANEL -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="20"
                Margin="30"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <Grid>
                <TextBlock x:Name="placeholderText"
                           Text="Selecteer een levering voor details"
                           FontSize="20"
                           FontStyle="Italic"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <ScrollViewer>
                    <StackPanel x:Name="detailsPanel"
                                Margin="20"
                                Spacing="15"
                                Visibility="Collapsed">

                        <TextBlock Text="Leveringsdetails"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="Black"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Productnaam:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailProductName" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Aantal geleverd:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailQuantity" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Klantnaam:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailCustomerName" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Afleveradres:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailAddress" Width="250" TextWrapping="Wrap" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Status:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailStatus" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Geplande leveringsdatum:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailPlannedDate" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Werkelijke leveringsdatum:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailActualDate" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Vervoerder:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailCarrier" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Naam chauffeur:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailDriver" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Trackingnummer:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailTrackingNumber" Width="250" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Opmerkingen:" Width="180" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailNotes" Width="250" TextWrapping="Wrap" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="10"
                                    Margin="0,20,0,0">

                            <Button Content="✏️ Aanpassen"
                                    Width="180"
                                    Height="45"
                                    Background="#FFD700"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    CornerRadius="10"
                                    BorderThickness="0"
                                    Click="EditDeliveryButton_Click"/>

                            <Button Content="❌ Verwijderen"
                                    Width="180"
                                    Height="45"
                                    Background="DarkRed"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    CornerRadius="10"
                                    BorderThickness="0"
                                    Click="DeleteDeliveryButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>