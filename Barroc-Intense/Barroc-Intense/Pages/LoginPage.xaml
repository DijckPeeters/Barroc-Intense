<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <!-- Background -->
    <Grid Background="#212121">

        <!-- Center card -->
        <Border
            Width="400"
            Padding="30"
            Background="#5C5C5C"
            CornerRadius="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <StackPanel Spacing="20">

                <!-- LOGO -->
                <Image
                    Source="/Assets/logo.png"
                    Height="120"
                    Margin="0,0,0,10"/>


                <!-- TITLE -->
                <TextBlock
                    Text="Login"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="#FFD700"
                    HorizontalAlignment="Center"/>

                <!-- USERNAME -->
                <TextBox
                    x:Name="UsernameBox"
                    PlaceholderText="Gebruikersnaam"
                    Background="#111111"
                    Foreground="White"
                    PlaceholderForeground="Gray"
                    BorderBrush="#FFD700"
                    BorderThickness="2"/>

                <!-- PASSWORD -->
                <PasswordBox
                    x:Name="PasswordBox"
                    PlaceholderText="Wachtwoord"
                    Background="#111111"
                    Foreground="White"
                    BorderBrush="#FFD700"
                    BorderThickness="2"/>

                <!-- ERROR MESSAGE -->
                <TextBlock
                    x:Name="errorsTextBlock"
                    Foreground="Red"
                    FontSize="14"
                    TextAlignment="Center"
                    TextWrapping="Wrap"/>

                <!-- LOGIN BUTTON -->
                <Button
                    Content="Inloggen"
                    Height="45"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#FFD700"
                    Foreground="Black"
                    BorderThickness="0"
                    Click="Button_Click"/>

            </StackPanel>
        </Border>
    </Grid> 
</Page>