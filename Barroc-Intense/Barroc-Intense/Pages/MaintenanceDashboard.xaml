<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.MaintenanceDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- BACKGROUND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- MAIN CARD -->
        <Border
            Background="White"
            CornerRadius="24"
            Padding="40"
            Width="960"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <StackPanel Spacing="36">

                <!-- HEADER -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Text="Maintenance Dashboard"
                        FontSize="44"
                        FontWeight="Bold"
                        Foreground="Black"
                        HorizontalAlignment="Center"/>

                    <TextBlock
                        Text="Beheer meldingen, machines en planning"
                        FontSize="18"
                        Foreground="Gray"
                        HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- DIVIDER -->
                <Border Height="1"
                        Background="#FFD700"
                        Opacity="0.6"
                        Margin="80,10"/>

                <!-- BUTTON GRID -->
                <Grid ColumnDefinitions="1*,1*"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="30"
                      RowSpacing="30">

                    <!-- MELDINGEN -->
                    <Button
                        Content="Meldingen en Storingen"
                        Height="90"
                        FontSize="22"
                        FontWeight="Bold"
                        Background="Black"
                        Foreground="Yellow"
                        CornerRadius="18"
                        Click="OpenMeldingen_Click"/>

                    <!-- MACHINES -->
                    <Button
                        Content="Machines"
                        Grid.Column="1"
                        Height="90"
                        FontSize="22"
                        FontWeight="Bold"
                        Background="Black"
                        Foreground="Yellow"
                        CornerRadius="18"
                        Click="OpenMachines_Click"/>

                    <!-- KALENDER -->
                    <Button
                        Content="Kalender"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="90"
                        FontSize="22"
                        FontWeight="Bold"
                        Background="Black"
                        Foreground="Yellow"
                        CornerRadius="18"
                        Click="OpenKalender_Click"/>

                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
