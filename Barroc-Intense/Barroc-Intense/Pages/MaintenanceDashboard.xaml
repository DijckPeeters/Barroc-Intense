<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.MaintenanceDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


        <Grid>
            <!-- ACHTERGROND -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Yellow" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- CONTENT CARD -->
            <Border Background="White"
                CornerRadius="20"
                Margin="40"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="900">

                <StackPanel Spacing="30">

                    <!-- TITEL -->
                    <TextBlock Text="Maintenance Dashboard"
                           FontSize="42"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="Black"/>

                    <TextBlock Text="Kies een onderdeel"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           Foreground="Gray"/>

                    <!-- KNOPPEN -->
                    <Grid ColumnDefinitions="1*,1*"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="30"
                      RowSpacing="30"
                      Margin="0,20,0,0">

                        <!-- MELDINGEN -->
                        <Button Content="Meldingen / Storingen"
                            Grid.Row="0"
                            Grid.Column="0"
                            Height="80"
                            FontSize="22"
                            FontWeight="Bold"
                            Background="Black"
                            Foreground="Yellow"
                            Click="OpenMeldingen_Click"/>

                        <!-- MACHINES -->
                        <Button Content="Machines"
                            Grid.Row="0"
                            Grid.Column="1"
                            Height="80"
                            FontSize="22"
                            FontWeight="Bold"
                            Background="Black"
                            Foreground="Yellow"
                            Click="OpenMachines_Click"/>

                        <!-- LOGBOEK -->
                        <Button Content="Logboek"
                            Grid.Row="1"
                            Grid.Column="0"
                            Height="80"
                            FontSize="22"
                            FontWeight="Bold"
                            Background="Black"
                            Foreground="Yellow"
                            Click="OpenLogboek_Click"/>

                        <!-- KALENDER -->
                        <Button Content="Kalender"
                            Grid.Row="1"
                            Grid.Column="1"
                            Height="80"
                            FontSize="22"
                            FontWeight="Bold"
                            Background="Black"
                            Foreground="Yellow"
                            Click="OpenKalender_Click"/>

                    </Grid>

                </StackPanel>
            </Border>
        </Grid>
    </Page>
