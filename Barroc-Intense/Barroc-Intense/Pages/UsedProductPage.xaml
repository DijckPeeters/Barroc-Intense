<Page
    x:Class="Barroc_Intense.Pages.UsedProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Achtergrond gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#EEFFFFFF"
                CornerRadius="10"
                Margin="30">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10" Spacing="20">

                    <!-- Titel -->
                    <TextBlock x:Name="ProductTitleText"
                               Text="Geleverde producten"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"/>

                    <!-- Terug knop -->
                    <Button Content="â¬…ï¸ Terug naar voorraad"
                            Click="BackToStockButton_Click"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            Width="220"
                            Height="40"
                            HorizontalAlignment="Center"
                            CornerRadius="10"
                            BorderThickness="0"/>

                    <!-- Gebruikte producten -->
                    <ItemsControl x:Name="UsedBoxesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        CornerRadius="10"
                                        Margin="0,10"
                                        Padding="15"
                                        BorderBrush="Black"
                                        BorderThickness="1">
                                    <StackPanel Spacing="8">

                                        <!-- Productnaam -->
                                        <TextBlock Text="{Binding ProductName}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="Black"/>

                                        <!-- Klant en adres -->
                                        <TextBlock Text="Klant:" FontWeight="Bold" Foreground="Black"/>
                                        <TextBlock Text="{Binding CustomerName}" Foreground="Black"/>

                                        <TextBlock Text="Adres:" FontWeight="Bold" Foreground="Black"/>
                                        <TextBlock Text="{Binding DeliveryAddress}" Foreground="Black"/>

                                        <TextBlock Text="Geleverd op:" FontWeight="Bold" Foreground="Black"/>
                                        <TextBlock Text="{Binding ActualDeliveryDate}" Foreground="Black"/>

                                        <!-- Bekijk materialen knop -->
                                        <Button Content="ðŸ“‹ Gebruikte materialen"
                                                Tag="{Binding DeliveryID}"
                                                Click="MaterialButton_Click"
                                                Background="Black"
                                                Foreground="Yellow"
                                                FontWeight="Bold"
                                                Height="40"
                                                Width="200"
                                                HorizontalAlignment="Left"
                                                CornerRadius="10"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
