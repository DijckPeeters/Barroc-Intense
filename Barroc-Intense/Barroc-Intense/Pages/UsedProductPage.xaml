<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.UsedProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFF2F2F2" Padding="30">

        <StackPanel Spacing="20">

            <TextBlock x:Name="ProductTitleText"
                       Text="Product naam"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="Black"/>
            <Button Content="â¬…ï¸ Terug naar voorraad"
                    Click="BackToStockButton_Click"
                    Width="220"
                    Height="40"
                    Background="Black"
                    Foreground="Yellow"
                    FontWeight="Bold"/>


            <ItemsControl x:Name="UsedBoxesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="10"
                                Margin="0,10"
                                Padding="20"
                                BorderBrush="Black"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding ProductName}"
                                           FontSize="20"
                                           FontWeight="Bold"/>

                                <TextBlock Text="Adresse:" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding DeliveryAddress}" />

                                <TextBlock Text="Klant:" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding CustomerName}" />

                                <TextBlock Text="Geleverd:" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ActualDeliveryDate}" />


                                <Button Content="ðŸ“‹ Bekijk materialen"
                                        Tag="{Binding}"
                                        Click="MaterialButton_Click"
                                        Background="Black"
                                        Foreground="Yellow"
                                        Margin="0,10,0,0"
                                        Width="200"
                                        Height="40"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                            
                            
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>

    </Grid>
</Page>
