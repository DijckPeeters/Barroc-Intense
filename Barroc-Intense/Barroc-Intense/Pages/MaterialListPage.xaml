<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.MaterialListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- ACHTERGROND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- CONTENT CARD -->
        <Border Background="White"
                CornerRadius="20"
                Margin="30"
                Padding="25"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10" Spacing="18">

                    <TextBlock Text="Gebruikte Materialen"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- LISTVIEW -->
                    <ListView x:Name="materialsListView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF9F9F9"
                                        CornerRadius="16"
                                        Padding="14"
                                        Margin="0,6"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" Spacing="20">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"  
                                                   Foreground="Black"/>
                                        <TextBlock Text="{Binding PriceFormatted}" 
                                                   FontSize="16" 
                                                   Foreground="Black"/>
                                        <TextBlock Text="Aantal:" 
                                                   FontSize="16" 
                                                   Foreground="Black"/>
                                        <TextBlock Text="{Binding QuantityUsed}" 
                                                   FontSize="16" 
                                                   Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- TERUG KNOP -->
                    <Button Content="⬅️ Terug naar de voorraad"
                            Click="BackToStockButton_Click"
                            Background="#FFD700"
                            Foreground="Black"
                            FontWeight="Bold"
                            Width="240"
                            Height="45"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            CornerRadius="12"
                            BorderThickness="0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>