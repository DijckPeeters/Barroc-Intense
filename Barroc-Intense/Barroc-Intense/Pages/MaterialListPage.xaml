<Page
    x:Class="Barroc_Intense.Pages.MaterialListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#EEFFFFFF"
                CornerRadius="10"
                Margin="30">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20" Spacing="15">

                    <TextBlock Text="Gebruikte Materialen"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <ListView x:Name="materialsListView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFFBEF"
                CornerRadius="8"
                Padding="10"
                Margin="5">
                                    <StackPanel Orientation="Horizontal" Spacing="20">
                                        <TextBlock Text="{Binding Name}" 
                           FontWeight="Bold" 
                           FontSize="16"  
                           Foreground="Black"/>
                                        <TextBlock Text="{Binding PriceFormatted}" 
                           FontSize="16" 
                           Foreground="Black"/>
                                        <TextBlock Text="Aantal:" FontSize="16" Foreground="Black"/>
                                        <TextBlock Text="{Binding QuantityUsed}" 
                           FontSize="16" 
                           Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                    <Button Content="⬅️ Terug naar de voorraad"
                            Click="BackToStockButton_Click"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            Width="200"
                            Height="45"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            CornerRadius="10"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
