<Page
    x:Class="Barroc_Intense.Pages.Dashboards.ManagerDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages.Dashboards"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#1A1A1A" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Manager Dashboard"
                   FontSize="26"
                   Foreground="White"
                   Margin="0 0 0 20"/>

        <Grid Grid.Row="1" ColumnSpacing="20" RowSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LINKS -->
            <StackPanel Grid.Column="0" Spacing="16">

                <!-- 1. Toegang tot dashboards -->
                <StackPanel Background="#2A2A2A" Padding="16">
                    <TextBlock Text="Toegang tot dashboards" Foreground="White" FontSize="18"/>
                    <Button Content="Open Inkoop" Margin="0 8 0 0" Click="OpenInkoop_Click"/>
                    <Button Content="Open Sales" Margin="0 8 0 0" Click="OpenSales_Click"/>
                    <Button Content="Open Finance" Margin="0 8 0 0" Click="OpenFinance_Click"/>
                    <Button Content="Open Maintenance" Margin="0 8 0 0" Click="OpenMaintenance_Click"/>
                    <Button Content="Open Klantenservice" Margin="0 8 0 0" Click="OpenCustomer_Click"/>
                </StackPanel>

                <!-- 2. Rapportages -->
                <StackPanel Background="#2A2A2A" Padding="16">
                    <TextBlock Text="Rapportages per afdeling" Foreground="White" FontSize="18"/>
                    <ComboBox x:Name="DepartmentReportSelector" Margin="0 8 0 0">
                        <ComboBoxItem Content="Inkoop"/>
                        <ComboBoxItem Content="Sales"/>
                        <ComboBoxItem Content="Finance"/>
                        <ComboBoxItem Content="Maintenance"/>
                        <ComboBoxItem Content="Klantenservice"/>
                    </ComboBox>
                    <Button Content="Bekijk rapportage" Click="ViewReport_Click"/>
                    <TextBlock x:Name="ReportOutput"
                               Foreground="LightGray"
                               TextWrapping="Wrap"
                               Margin="0 8 0 0"/>
                </StackPanel>

            </StackPanel>

            <!-- RECHTS -->
            <StackPanel Grid.Column="1" Spacing="16">

                <!-- 3. Employee Management -->
                <StackPanel Background="#2A2A2A" Padding="16">
                    <TextBlock Text="Medewerkersbeheer" Foreground="White" FontSize="18"/>

                    <TextBox x:Name="NewUsername" PlaceholderText="Gebruikersnaam" Margin="0 8 0 0"/>
                    <ComboBox x:Name="NewRole">
                        <ComboBoxItem Content="Manager"/>
                        <ComboBoxItem Content="Sales"/>
                        <ComboBoxItem Content="Finance"/>
                        <ComboBoxItem Content="Inkoop"/>
                        <ComboBoxItem Content="Maintenance"/>
                        <ComboBoxItem Content="Klantenservice"/>
                    </ComboBox>
                    <Button Content="Account aanmaken" Margin="0 8 0 0" Click="AddEmployee_Click"/>

                    <ListView x:Name="EmployeeList" Height="150" Margin="0 8 0 0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Username}" Foreground="White" Grid.Column="0"/>
                                    <TextBlock Text="{Binding Role}" Foreground="Gray" Grid.Column="1"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button Content="Verwijder geselecteerde medewerker"
                            Click="DeleteEmployee_Click"/>
                </StackPanel>

                <!-- 4. Alerts -->
                <StackPanel Background="#2A2A2A" Padding="16">
                    <TextBlock Text="Waarschuwingen" Foreground="White" FontSize="18"/>
                    <TextBlock x:Name="AlertsBlock"
                               Text="Geen waarschuwingen"
                               Foreground="LightGray"
                               TextWrapping="Wrap"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>

</Page>
