<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.Dashboards.FinanceDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- ✅ GLOBAL PAGE STYLES -->
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Page.Resources>

    <Grid>

        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0" />
                <GradientStop Color="Black" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#EEFFFFFF"
                CornerRadius="10"
                Margin="20">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30" Spacing="20">

                    <TextBlock
                        Text="FINANCE DASHBOARD"
                        FontSize="48"
                        FontWeight="Bold"
                        HorizontalAlignment="Center" />

                    <Button
                        Content="Offerte aanmaken"
                        Width="220"
                        Height="45"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        Background="Black"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,6"
                        Click="CreateOffer_Click" />

                    <TextBlock
                        Text="Overzicht van leasecontracten en facturen"
                        FontSize="20"
                        HorizontalAlignment="Center" />

                    <!-- Offers -->
                    <StackPanel
                        x:Name="OfferListPanel"
                        Spacing="10"
                        Margin="0,10,0,10" />

                    <!-- Invoices -->
                    <StackPanel
                        x:Name="ContractListPanel"
                        Spacing="10"
                        Margin="0,30,0,30" />

                    <TextBlock
                        x:Name="TotalIncomeText"
                        Text="Totale inkomsten: €0.00"
                        FontSize="28"
                        FontWeight="Bold"
                        HorizontalAlignment="Center" />

                    <TextBlock
                        Text="Klik op 'Markeer als betaald' om een factuur te voldoen."
                        FontSize="16"
                        HorizontalAlignment="Center" />

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>