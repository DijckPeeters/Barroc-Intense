<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.Dashboards.SalesDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages.Dashboards"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Content container -->
        <Border Background="#AAFFFFFF"
                CornerRadius="10"
                Margin="20"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40" Spacing="25">

                    <!-- Title -->
                    <TextBlock Text="SALES DASHBOARD"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="Yellow"
                               HorizontalAlignment="Center"/>

                    <!-- QUOTE GENERATOR -->
                    <TextBlock Text="Offerte Generator"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,10,0,0"/>

                    <TextBox x:Name="QuoteClient"
                             Header="Klantnaam"
                             Height="70"
                             Foreground="Black"
                             MinWidth="600"/>

                    <TextBox x:Name="QuoteProduct"
                             Header="Product"
                             Height="70"
                             Foreground="Black"
                             MinWidth="600"/>

                    <TextBox x:Name="QuoteQuantity"
                             Header="Aantal"
                             Height="70"
                             Foreground="Black"
                             MinWidth="600"/>

                    <TextBox x:Name="QuotePricePerUnit"
                             Header="Prijs per stuk"
                             Height="70"
                             Foreground="Black"
                             MinWidth="600"/>

                    <Button Content="Bereken Offerte"
                            Width="300"
                            Height="60"
                            Background="Black"
                            Foreground="Yellow"
                            FontSize="20"
                            Click="CalculateQuote_Click"
                            HorizontalAlignment="Center"/>

                    <TextBlock x:Name="QuoteResult"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>

                    <!-- PROSPECT NOTES -->
                    <TextBlock Text="Prospect Notities"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,30,0,0"/>

                    <TextBox x:Name="ProspectCompany"
                             Header="Bedrijfsnaam"
                             Height="70"
                             MinWidth="600"/>

                    <TextBox x:Name="ProspectNote"
                             Header="Notitie"
                             Height="200"
                             AcceptsReturn="True"
                             MinWidth="600"/>

                    <Button Content="Notitie Opslaan"
                            Width="300"
                            Height="60"
                            Background="Black"
                            Foreground="Yellow"
                            FontSize="20"
                            Click="SaveProspect_Click"
                            HorizontalAlignment="Center"/>

                    <TextBlock x:Name="ProspectMessage"
                               FontSize="20"
                               Foreground="Green"
                               Margin="0,10,0,20"
                               TextWrapping="Wrap"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
