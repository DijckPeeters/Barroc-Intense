<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.KlantenservicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <!-- Achtergrondgradient zoals MainWindow -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Hele pagina vullen -->
        <Border Background="#AAFFFFFF" CornerRadius="10" Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="30" Spacing="15">

                    <!-- Pagina header -->
                    <TextBlock Text="Melding toevoegen"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="Yellow"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Formulier velden vullen de breedte van de pagina -->
                    <TextBox x:Name="AfdelingTextBox" Header="Afdeling" Height="100" MinWidth="600"/>
                    <TextBox x:Name="KlantTextBox" Header="Klant" Height="100" MinWidth="600"/>
                    <TextBox x:Name="ProductTextBox" Header="Product" Height="100" MinWidth="600"/>
                    <TextBox x:Name="ProbleemTextBox" Header="Probleemomschrijving" AcceptsReturn="True" Height="300" MinWidth="600"/>

                    <ComboBox x:Name="StatusComboBox" Header="Status" Height="80" MinWidth="600">
                        <ComboBoxItem Content="Open"/>
                        <ComboBoxItem Content="In behandeling"/>
                        <ComboBoxItem Content="Gesloten"/>
                    </ComboBox>
                    <TextBox x:Name="MachineTextBox" Header="Machine ID" Height="100" MinWidth="600"/>
                    <ComboBox x:Name="PrioriteitCombo" Header="Prioriteit" Height="80" MinWidth="600">
                        <ComboBoxItem Content="Laag"/>
                        <ComboBoxItem Content="Middel"/>
                        <ComboBoxItem Content="Hoog"/>
                    </ComboBox>
                    <DatePicker x:Name="DatumPicker" Header="Datum kiezen" MinWidth="600" />
                    <TimePicker x:Name="TijdPicker" Header="Tijd kiezen" MinWidth="600"/>



                    <!-- Knop -->
                    <Button Content="Melding toevoegen"
                            Height="60"
                            Width="250"
                            Background="Black"
                            Foreground="Yellow"
                            FontSize="20"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="Toevoegen_Click"
                            HorizontalAlignment="Center"/>
                    <Button Content="Maintenance"
                        Width="200"
                        Height="50"
                        Background="Black"
                        Foreground="Yellow"
                        FontSize="20"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="MaintenanceButton_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
