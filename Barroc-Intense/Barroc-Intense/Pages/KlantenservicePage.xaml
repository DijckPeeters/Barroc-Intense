<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.KlantenservicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- Achtergrond gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Hoofdlayout -->
        <Grid Padding="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border
                Background="#CC000000"
                CornerRadius="18"
                Padding="20"
                Margin="0,0,0,25">

                <TextBlock
                    Text="Nieuwe melding aanmaken"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="White"
                    HorizontalAlignment="Center"/>
            </Border>

            <!-- Formulier Card -->
            <Border
                Grid.Row="1"
                Background="White"
                CornerRadius="24"
                Padding="30"
                HorizontalAlignment="Center"
                MaxWidth="900">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="18">

                        <!-- Afdeling, Monteur, Klant, Product -->
                        <Grid ColumnSpacing="20" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox x:Name="AfdelingTextBox"
                                     Header="Afdeling"
                                     Height="80"/>
                            <TextBox x:Name="MonteurTextBox"
                                     Header="Monteur"
                                     Grid.Column="1"
                                     Height="80"/>
                            <TextBox x:Name="KlantTextBox"
                                     Header="Klant"
                                     Grid.Row="1"
                                     Height="80"/>
                            <TextBox x:Name="ProductTextBox"
                                     Header="Product"
                                     Grid.Column="1"
                                     Grid.Row="1"
                                     Height="80"/>
                        </Grid>

                        <!-- Probleemomschrijving -->
                        <TextBox x:Name="ProbleemTextBox"
                                 Header="Probleemomschrijving"
                                 AcceptsReturn="True"
                                 Height="200"
                                 TextWrapping="Wrap"/>

                        <!-- Status en prioriteit (gebruik comboBox voor vaste keuzes) -->
                        <Grid ColumnDefinitions="1*,1*" ColumnSpacing="20">
                            <ComboBox x:Name="StatusComboBox"
                                      Header="Status"
                                      Height="70">
                                <ComboBoxItem Content="Open"/>
                                <ComboBoxItem Content="In behandeling"/>
                                <ComboBoxItem Content="Gesloten"/>
                            </ComboBox>

                            <ComboBox x:Name="PrioriteitCombo"
                                      Header="Prioriteit"
                                      Height="70"
                                      Grid.Column="1">
                                <ComboBoxItem Content="Laag"/>
                                <ComboBoxItem Content="Middel"/>
                                <ComboBoxItem Content="Hoog"/>
                            </ComboBox>
                        </Grid>

                        <!-- Machine ID -->
                        <TextBox x:Name="MachineTextBox"
                                 Header="Machine ID"
                                 Height="80"/>

                        <!-- Datum en tijd -->
                        <Grid ColumnDefinitions="1*,1*" ColumnSpacing="20">
                            <DatePicker x:Name="DatumPicker"
                                        Header="Datum"/>
                            <TimePicker x:Name="TijdPicker"
                                        Header="Tijd"
                                        Grid.Column="1"/>
                        </Grid>

                        <CheckBox x:Name="GeenDatumCheckBox"
                                  Content="Geen datum/tijd kiezen"/>

                        <!-- Scheidingslijn -->
                        <Border Height="1"
                                Background="#FFD700"
                                Opacity="0.6"
                                Margin="0,10"/>

                        <!-- Actieknoppen -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="20">

                            <Button Content="Melding toevoegen"
                                    Width="260"
                                    Height="56"
                                    Background="Black"
                                    Foreground="Yellow"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Click="Toevoegen_Click"/>

                            <Button Content="Maintenance"
                                    Width="220"
                                    Height="56"
                                    Background="Black"
                                    Foreground="Yellow"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Click="MaintenanceButton_Click"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Grid>
</Page>