<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.StockPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localData="using:Barroc_Intense.Data"
    mc:Ignorable="d">

    <Grid>
        <!-- Achtergrond -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- ðŸ“‹ PRODUCT LIJST -->
        <Border Background="#EEFFFFFF"
                CornerRadius="10"
                Margin="30"
                Grid.Column="0">
            <StackPanel Margin="10" Spacing="10">
                <TextBlock Text="Producten"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,10"/>

                <!-- Nieuw product knop -->
                <Button x:Name="addProductButton"
                        Content="âž• Nieuw product toevoegen"
                        Click="AddProductButton_Click"
                        Background="Black"
                        Foreground="Yellow"
                        FontWeight="Bold"
                        Width="250"
                        Height="40"
                        CornerRadius="10"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        BorderThickness="0">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#222222"/>
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FFFF66"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#444444"/>
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Yellow"/>
                        <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#555555"/>
                        <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="#AAAAAA"/>
                    </Button.Resources>
                </Button>

                <!-- Productlijst -->
                <ListView x:Name="productListView"
                          IsItemClickEnabled="True"
                          SelectionMode="Single"
                          ItemClick="productListView_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="localData:Product">
                            <Border Background="#FFFBEF"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="5">
                                <TextBlock Text="{x:Bind ProductName}"
                                           FontSize="18"
                                           Foreground="Black"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>

        <!-- ðŸ“¦ PRODUCT DETAILS -->
        <Border Background="#FFFFFFFF"
                CornerRadius="10"
                Margin="30"
                Grid.Column="1">

            <!-- Grid zodat meerdere elementen in de Border kunnen -->
            <Grid>

                <!-- Placeholder voordat een product is geselecteerd -->
                <TextBlock x:Name="placeholderTextBlock"
                           Text="Klik op een product om details te zien"
                           Foreground="Gray"
                           FontStyle="Italic"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Visible"/>

                <!-- Productdetails -->
                <StackPanel x:Name="detailsPanel"
                            Margin="30"
                            Spacing="15"
                            Visibility="Collapsed">

                    <TextBlock Text="Productdetails"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"/>

                    <StackPanel>
                        <TextBlock Text="Naam Product:"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   FontSize="16"/>
                        <TextBlock x:Name="detailNameTextBlock"
                                   Foreground="Black"
                                   FontSize="18"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="IngrediÃ«nten:"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   FontSize="16"/>
                        <TextBlock x:Name="detailIngredientTextBlock"
                                   Foreground="Black"
                                   FontSize="18"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Prijs:"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   FontSize="16"/>
                        <TextBlock x:Name="detailPriceTextBlock"
                                   Foreground="Black"
                                   FontSize="18"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Voorraad:"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   FontSize="16"/>
                        <TextBlock x:Name="detailStockTextBlock"
                                   Foreground="Black"
                                   FontSize="18"/>
                    </StackPanel>

                    <!-- Terug naar formulier knop -->
                    <Button Content="Terug naar dashboard"
                            Click="BackButton_Click"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            Width="200"
                            Height="45"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            BorderThickness="0">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#222222"/>
                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FFFF66"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#444444"/>
                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Yellow"/>
                            <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#555555"/>
                            <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="#AAAAAA"/>
                        </Button.Resources>
                    </Button>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0">

                        <!-- Aanpassen knop -->
                        <Button Content="âœï¸ Product aanpassen"
            x:Name="editProductButton"
            Click="EditProductButton_Click"
            Background="DarkOrange"
            Foreground="White"
            FontWeight="Bold"
            Width="150"
            Height="45"
            BorderThickness="0">
                            <Button.Resources>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FFAA33"/>
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#DD8800"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                            </Button.Resources>
                        </Button>

                        <!-- Verwijder knop -->
                        <Button Content="âŒ Product verwijderen"
            x:Name="deleteProductButton"
            Click="DeleteProductButton_Click"
            Background="DarkRed"
            Foreground="White"
            FontWeight="Bold"
            Width="150"
            Height="45"
            BorderThickness="0">
                            <Button.Resources>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#AA0000"/>
                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#880000"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                            </Button.Resources>
                        </Button>

                    </StackPanel>






                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
