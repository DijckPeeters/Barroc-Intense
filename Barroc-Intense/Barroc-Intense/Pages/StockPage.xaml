<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.StockPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localData="using:Barroc_Intense.Data"
    mc:Ignorable="d">

    <Grid>
        <!-- Achtergrond -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Kolommen -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

     

        <Border Background="#EEFFFFFF"
                CornerRadius="10"
                Margin="30"
                Grid.Column="0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Producten"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,10"/>

                    <!-- Nieuw product knop -->
                    <Button Grid.Row="1"
                            x:Name="addProductButton"
                            Content="➕ Nieuw product toevoegen"
                            Click="AddProductButton_Click"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            Width="250"
                            Height="40"
                            CornerRadius="10"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            BorderThickness="0"/>

                    <!-- Scrollbare lijst -->
                    <ListView Grid.Row="2"
                              x:Name="productListView"
                              IsItemClickEnabled="True"
                              SelectionMode="Single"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ItemClick="productListView_ItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="localData:Product">
                                <Border Background="#FFFBEF"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="5">
                                    <TextBlock Text="{x:Bind ProductName}"
                                               FontSize="18"
                                               Foreground="Black"
                                               FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Terug naar dashboard -->
                    <Button Grid.Row="3"
                            Content="Terug naar dashboard"
                            Click="BackButton_Click"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            Width="200"
                            Height="45"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            BorderThickness="0"/>
                </Grid>
            </ScrollViewer>
        </Border>

    

        <Border Background="#FFFFFFFF"
                CornerRadius="10"
                Margin="30"
                Grid.Column="1">

            <Grid>

                <TextBlock x:Name="placeholderTextBlock"
                           Text="Klik op een product om details te zien"
                           Foreground="Gray"
                           FontStyle="Italic"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Visible"/>

                <!-- Scroll -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <StackPanel x:Name="detailsPanel"
                                Margin="30"
                                Spacing="15"
                                Visibility="Collapsed">

                        <TextBlock Text="Productdetails"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="Black"/>

                        <StackPanel>
                            <TextBlock Text="Naam Product:"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       FontSize="16"/>
                            <TextBlock x:Name="detailNameTextBlock"
                                       Foreground="Black"
                                       FontSize="18"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Lease Contract:"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       FontSize="16"/>
                            <TextBlock x:Name="detailLeaseContractTextBlock"
                                       Foreground="Black"
                                       FontSize="18"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Reparatie kosten:"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       FontSize="16"/>
                            <TextBlock x:Name="detailInstallationCostTextBlock"
                                       Foreground="Black"
                                       FontSize="18"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Prijs per kg:"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       FontSize="16"/>
                            <TextBlock x:Name="detailPriceTextBlock"
                                       Foreground="Black"
                                       FontSize="18"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Categorie:"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       FontSize="16"/>
                            <TextBlock x:Name="detailCategoryTextBlock"
                                       Foreground="Black"
                                       FontSize="18"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Voorraad:"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       FontSize="16"/>
                            <TextBlock x:Name="detailStockTextBlock"
                                       Foreground="Black"
                                       FontSize="18"/>
                        </StackPanel>

                        <!-- Knoppen -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="10"
                                    Margin="0,10,0,0">

                            <Button Content="✏️ Product aanpassen"
                                    x:Name="editProductButton"
                                    Click="EditProductButton_Click"
                                    Background="DarkOrange"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Width="200"
                                    Height="45"
                                    BorderThickness="0"/>

                            <Button Content="❌ Product verwijderen"
                                    x:Name="deleteProductButton"
                                    Click="DeleteProductButton_Click"
                                    Background="DarkRed"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Width="200"
                                    Height="45"
                                    BorderThickness="0"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
