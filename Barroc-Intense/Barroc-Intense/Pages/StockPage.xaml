<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.StockPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localData="using:Barroc_Intense.Data"
    xmlns:localConv="using:Barroc_Intense.Pages"
    mc:Ignorable="d">

    <Page.Resources>
        <localConv:LowStockConverter x:Key="LowStockConverter"/>
    </Page.Resources>

    <Grid>
        <!-- ACHTERGROND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- KOLOMMEN -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- LINKER KANT -->
        <Border Grid.Column="0"
                Background="White"
                CornerRadius="20"
                Margin="30">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Producten"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,15"/>

                    <!-- NIEUW PRODUCT -->
                    <Button Grid.Row="1"
                            x:Name="addProductButton"
                            Content="âž• Nieuw product toevoegen"
                            Click="AddProductButton_Click"
                            Background="#FFD700"
                            Foreground="Black"
                            FontWeight="Bold"
                            Width="260"
                            Height="42"
                            CornerRadius="12"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center"
                            BorderThickness="0"/>

                    <!-- PRODUCT LIJST -->
                    <ListView Grid.Row="2"
                              x:Name="productListView"
                              IsItemClickEnabled="True"
                              SelectionMode="Single"
                              ItemClick="productListView_ItemClick">

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="localData:Product">
                                <Border Background="#FFF9F9F9"
                                        CornerRadius="16"
                                        Padding="14"
                                        Margin="6"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1">

                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Spacing="12">

                                        <StackPanel Width="200">
                                            <TextBlock Text="{x:Bind ProductName}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="Black"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Text="âš ï¸ Stock is laag"
                                                       FontSize="14"
                                                       Foreground="Red"
                                                       Margin="0,6,0,0"
                                                       Visibility="{x:Bind Stock, Converter={StaticResource LowStockConverter}}"/>
                                        </StackPanel>

                                        <!-- VRACHTWAGEN -->
                                        <Button Content="ðŸšš"
                                                FontSize="22"
                                                Background="#FFD700"
                                                Foreground="Black"
                                                CornerRadius="8"
                                                BorderThickness="0"
                                                Click="TruckButton_Click"
                                                Tag="{x:Bind Id}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- TERUG -->
                    <Button Grid.Row="3"
                            Content="Terug naar dashboard"
                            Click="BackButton_Click"
                            Background="#FFD700"
                            Foreground="Black"
                            FontWeight="Bold"
                            Width="220"
                            Height="45"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            CornerRadius="12"
                            BorderThickness="0"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- RECHTER KANT -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="20"
                Margin="30">

            <Grid>
                <TextBlock x:Name="placeholderTextBlock"
                           Text="Klik op een product om details te zien"
                           Foreground="Black"
                           FontStyle="Italic"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Visible"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="detailsPanel"
                                Margin="30"
                                Spacing="16"
                                Visibility="Collapsed">

                        <TextBlock Text="Productdetails"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="Black"/>

                        <!-- DETAILS (ongewijzigd, alleen zwart) -->
                        <StackPanel>
                            <TextBlock Text="Naam Product:" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailNameTextBlock" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Lease Contract:" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailLeaseContractTextBlock" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Reparatie kosten:" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailInstallationCostTextBlock" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Prijs per kg:" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailPriceTextBlock" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Categorie:" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailCategoryTextBlock" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Voorraad:" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="detailStockTextBlock" Foreground="Black"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="In gebruik:" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock x:Name="UsedTextBlock" Foreground="Black"/>
                        </StackPanel>

                        <!-- KNOPPEN (NIETS VERWIJDERD) -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="12"
                                    Margin="0,20,0,0">

                            <Button Content="âœï¸ Product aanpassen"
                                    x:Name="editProductButton"
                                    Click="EditProductButton_Click"
                                    Background="#FFD700"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    Width="200"
                                    Height="45"
                                    CornerRadius="10"
                                    BorderThickness="0"/>

                            <Button Content="âŒ Product verwijderen"
                                    x:Name="deleteProductButton"
                                    Click="DeleteProductButton_Click"
                                    Background="DarkRed"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Width="200"
                                    Height="45"
                                    CornerRadius="10"
                                    BorderThickness="0"/>

                            <Button Content="ðŸ“‹ Materialenlijst"
                                    x:Name="materialsListButton"
                                    Click="MaterialsListButton_Click"
                                    Background="DarkBlue"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Width="200"
                                    Height="45"
                                    CornerRadius="10"
                                    BorderThickness="0"/>

                            <Button Content="ðŸ“¦ Gebruikte producten"
                                    x:Name="usedProductsButton"
                                    Click="UsedProductsButton_Click"
                                    Background="DarkGreen"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Width="220"
                                    Height="45"
                                    CornerRadius="10"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>