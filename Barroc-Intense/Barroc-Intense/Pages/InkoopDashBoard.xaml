<Page
    x:Class="Barroc_Intense.Pages.InkoopDashBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- ACHTERGROND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- MAIN CARD -->
        <Border Background="#EEFFFFFF"
                CornerRadius="25"
                Margin="80"
                Padding="60"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <StackPanel Spacing="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <TextBlock Text="Inkoop Dashboard"
                           FontSize="34"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"/>

                <Button Content="ðŸ“¦ Productvoorraad"
                        Click="ViewStockButton_Click"
                        FontSize="22"
                        FontWeight="Bold"
                        Width="340"
                        Height="80"
                        Background="Black"
                        Foreground="#FFD700"
                        CornerRadius="18"
                        BorderThickness="0"/>

                <Button Content="âž• Product toevoegen"
                        Click="AddProductButton_Click"
                        FontSize="22"
                        FontWeight="Bold"
                        Width="340"
                        Height="80"
                        Background="Black"
                        Foreground="#FFD700"
                        CornerRadius="18"
                        BorderThickness="0"/>

                <Button Content="ðŸšš Levering"
                        Click="GoToDeliveryButton_Click"
                        FontSize="22"
                        FontWeight="Bold"
                        Width="340"
                        Height="80"
                        Background="Black"
                        Foreground="#FFD700"
                        CornerRadius="18"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>