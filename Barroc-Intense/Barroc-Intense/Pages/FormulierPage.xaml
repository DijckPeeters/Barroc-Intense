<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.FormulierPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


        <ScrollViewer>
            <StackPanel Margin="20" Spacing="20">

                <TextBlock x:Name="TitleBlock"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="Yellow"/>

                <StackPanel x:Name="KeuringPanel" Spacing="10">
                    <CheckBox x:Name="ChecklistBox" Content="Checklist volledig uitgevoerd"/>
                    <CheckBox x:Name="GoedgekeurdBox" Content="Goedgekeurd"/>
                    <TextBox x:Name="KeuringOpmerkingenBox"
                         Header="Opmerkingen" Height="150"/>
                </StackPanel>

                <StackPanel x:Name="MeldingPanel" Spacing="10">

                    <TextBlock Text="Klantnaam (automatisch)" />
                    <TextBox x:Name="KlantBox" IsReadOnly="True"/>

                    <TextBlock Text="Datum" />
                    <TextBox x:Name="DatumBox" IsReadOnly="True"/>

                    <TextBlock Text="InitiÃ«le melding" />
                    <TextBox x:Name="InitieleBox" IsReadOnly="True"/>

                    <TextBlock Text="Type koffie machine" />
                    <TextBox x:Name="MachineBox" IsReadOnly="True"/>

                    <TextBox x:Name="StoringscodeBox" Header="Storingscode"/>
                    <CheckBox x:Name="VerholpenBox" Content="Storing verholpen"/>
                    <TextBox x:Name="VervolgBox" Header="Vervolgafspraken" Height="120"/>
                    <TextBox x:Name="BeschrijvingBox"
                         Header="Korte beschrijving" Height="120"/>
                </StackPanel>

                <TextBlock Text="Gebruikte onderdelen" FontSize="20" FontWeight="SemiBold"/>
                <ListView x:Name="OnderdelenList">
                    <ListViewItem Content="Filter set"/>
                    <ListViewItem Content="Pomp"/>
                    <ListViewItem Content="Sensor"/>
                    <ListViewItem Content="Leiding"/>
                    <ListViewItem Content="Revisieset"/>
                </ListView>

                <Button Content="Handtekening zetten"
                    Background="Black"
                    Foreground="Yellow"
                    Click="Handtekening_Click"/>

                <Button Content="Opslaan"
                    Background="Yellow"
                    Foreground="Black"
                    Height="60"
                    Click="Opslaan_Click"/>

            </StackPanel>
        </ScrollViewer>
    </Page>
