<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.FormulierPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Barroc_Intense.Data"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <!-- PAGE BACKGROUND -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer>
            <StackPanel Margin="20" Spacing="20">

                <!-- TITLE -->
                <TextBlock x:Name="TitleBlock"
                           FontSize="40"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- KEURING -->
                <Border Background="#CCFFFFFF" CornerRadius="20" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Keuring" FontSize="28" FontWeight="Bold" Foreground="Black"/>
                        <CheckBox x:Name="ChecklistBox" Content="Checklist volledig uitgevoerd"/>
                        <CheckBox x:Name="GoedgekeurdBox" Content="Goedgekeurd"/>
                        <TextBox x:Name="KeuringOpmerkingenBox" Header="Opmerkingen" Height="150"/>
                    </StackPanel>
                </Border>

                <!-- MELDING -->
                <Border Background="#CCFFFFFF" CornerRadius="20" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Melding" FontSize="28" FontWeight="Bold" Foreground="Black"/>

                        <TextBlock Text="Klantnaam (automatisch)" />
                        <TextBox x:Name="KlantBox" IsReadOnly="True"/>

                        <TextBlock Text="InitiÃ«le melding" />
                        <TextBox x:Name="InitieleBox" IsReadOnly="True"/>

                        <TextBlock Text="Type koffie machine" />
                        <TextBox x:Name="MachineBox" IsReadOnly="True"/>

                        <TextBox x:Name="StoringscodeBox" Header="Storingscode"/>
                        <CheckBox x:Name="VerholpenBox" Content="Storing verholpen"/>
                        <TextBox x:Name="VervolgBox" Header="Vervolgafspraken" Height="120"/>
                        <TextBox x:Name="BeschrijvingBox" Header="Korte beschrijving" Height="120"/>
                    </StackPanel>
                </Border>

                <!-- ONDERDELEN AANKLIKKEN -->
                <Border Background="#CCFFFFFF" CornerRadius="20" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Onderdelen" FontSize="28" FontWeight="Bold" Foreground="Black"/>
                        <ListView x:Name="OnderdelenList" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:MaterialViewModel">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsSelected, Mode=TwoWay}" />
                                        <TextBlock Text="{x:Bind Quantity}" Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="18"/>
                                        <Button Content="+" Width="40" Click="Plus_Click" Tag="{x:Bind}" />
                                        <Button Content="-" Width="40" Click="Min_Click" Tag="{x:Bind}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- HANDTEKENING -->
                <Border Background="#CCFFFFFF" CornerRadius="20" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Handtekening" FontSize="28" FontWeight="Bold" Foreground="Black"/>
                        <Grid Width="500" Height="200" Margin="0,10,0,10">
                            <Canvas x:Name="SignatureCanvas" Background="White"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                    PointerPressed="SignatureCanvas_PointerPressed"
                                    PointerMoved="SignatureCanvas_PointerMoved"
                                    PointerReleased="SignatureCanvas_PointerReleased"/>
                            <Image x:Name="SavedSignatureImage" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                            <Button Content="Clear" Click="ClearButton_Click" Width="120" Background="Black" Foreground="Yellow"/>
                            <Button Content="Opslaan" Click="Opslaan_Click" Width="200" Height="60" Background="Yellow" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
