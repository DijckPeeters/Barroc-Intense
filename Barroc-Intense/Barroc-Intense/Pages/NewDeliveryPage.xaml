<Page
    x:Class="Barroc_Intense.Pages.NewDeliveryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- BACKGROUND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- MAIN CARD -->
        <Border Background="White"
                CornerRadius="25"
                Padding="40"
                Margin="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                MaxWidth="700">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="18" HorizontalAlignment="Stretch">

                    <!-- PAGE TITLE -->
                    <TextBlock Text="Nieuwe Levering Toevoegen"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"/>

                    <!-- PRODUCT ID -->
                    <TextBlock Text="Product ID" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newProductId" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- ORDER ID -->
                    <TextBlock Text="Order ID" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newOrderId" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- CUSTOMER ID -->
                    <TextBlock Text="Customer ID" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newCustomerId" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- TELEFOON -->
                    <TextBlock Text="Telefoonnummer" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newCustomerContact" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- PRODUCT NAAM (read-only) -->
                    <TextBlock Text="Product Naam" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newProductName" Padding="12" CornerRadius="10" Foreground="Black" IsReadOnly="True"
                             Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- AANTAL GELEVERD -->
                    <TextBlock Text="Aantal geleverd" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newQuantity" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- AANTAL VERWACHT -->
                    <TextBlock Text="Aantal verwacht" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newExpectedQuantity" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- KLANTNAAM -->
                    <TextBlock Text="Klantnaam" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newCustomerName" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- AFLEVERADRES -->
                    <TextBlock Text="Afleveradres" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newAddress" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- GEPLANDE LEVERINGSDATUM -->
                    <TextBlock Text="Geplande leveringsdatum" FontWeight="SemiBold" Foreground="Black"/>
                    <DatePicker x:Name="newPlannedDate" Foreground="Black"/>

                    <!-- STATUS -->
                    <TextBlock Text="Status" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newStatus" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- VERVOERDER -->
                    <TextBlock Text="Vervoerder" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newCarrier" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- NAAM CHAUFFEUR -->
                    <TextBlock Text="Naam chauffeur" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newDriver" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- TRACKINGNUMMER -->
                    <TextBlock Text="Trackingnummer" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newTrackingNumber" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- OPMERKINGEN -->
                    <TextBlock Text="Opmerkingen" FontWeight="SemiBold" Foreground="Black"/>
                    <TextBox x:Name="newNotes" Padding="12" CornerRadius="10" Foreground="Black"
                             BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- VALIDATION -->
                    <TextBlock x:Name="validationResultsTextBlock"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               FontSize="14"/>

                    <!-- ACTION BUTTONS -->
                    <Button Content="Opslaan"
                            Click="SaveButton_Click"
                            Background="#FFD700"
                            Foreground="Black"
                            FontWeight="Bold"
                            Height="50"
                            CornerRadius="10"
                            HorizontalAlignment="Center"/>

                    <Button Content="Terug naar Overzicht"
                            Click="BackButton_Click"
                            Background="Gray"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="50"
                            CornerRadius="10"
                            HorizontalAlignment="Center"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>