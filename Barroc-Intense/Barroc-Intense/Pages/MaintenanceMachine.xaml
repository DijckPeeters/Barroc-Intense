<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.MaintenanceMachine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- BACKGROUND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- CONTENT -->
        <Grid Padding="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border
                Background="#CC000000"
                CornerRadius="18"
                Padding="20"
                Margin="0,0,0,25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BACK BUTTON -->
                    <Button
                        Content="â† Dashboard"
                        FontSize="14"
                        Padding="14,8"
                        CornerRadius="10"
                        Background="#FFD700"
                        Foreground="Black"
                        FontWeight="SemiBold"
                        Click="BackToMaintenanceDashboard"/>

                    <!-- TITLE -->
                    <TextBlock
                        Grid.Column="1"
                        Text="Machines"
                        FontSize="34"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- MACHINES LIST (SCROLLABLE) -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Visible"
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="700">

                <ItemsControl x:Name="MachinesListView">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:Machine">
                            <Border
                                Background="White"
                                CornerRadius="18"
                                Padding="18"
                                Margin="0,0,0,18"
                                MaxWidth="900"
                                HorizontalAlignment="Center">

                                <StackPanel Spacing="6">

                                    <!-- PRODUCT -->
                                    <TextBlock Text="Product"
                                               FontSize="12"
                                               Foreground="Black"
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="{x:Bind FirstDeliveryProductName}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="Black"
                                               Margin="0,0,0,8"/>

                                    <!-- INFO GRID -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="Machine-locatie"
                                                       FontSize="12"
                                                       Foreground="Black"/>
                                            <TextBlock Text="{x:Bind Locatie}"
                                                       FontWeight="SemiBold"
                                                       Foreground="Black"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Status"
                                                       FontSize="12"
                                                       Foreground="Black"/>
                                            <TextBlock Text="{x:Bind Status}"
                                                       FontWeight="Bold"
                                                       Foreground="Black"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- DIVIDER -->
                                    <Border Height="1"
                                            Background="#E0E0E0"
                                            Margin="0,12"/>

                                    <TextBlock Text="Delivery-adres"
                                               FontSize="12"
                                               Foreground="Black"/>

                                    <TextBlock Text="{x:Bind FirstDeliveryAddress}"
                                               FontWeight="SemiBold"
                                               Foreground="Black"/>

                                    <TextBlock Text="Klant"
                                               FontSize="12"
                                               Foreground="Black"
                                               Margin="0,6,0,0"/>

                                    <TextBlock Text="{x:Bind FirstDeliveryCustomerName}"
                                               FontWeight="SemiBold"
                                               Foreground="Black"/>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
