<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Barroc_Intense.Pages.MaintenanceMachine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- BACKGROUND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD700" Offset="0"/>
                <GradientStop Color="#000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- CONTENT -->
        <Grid Padding="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border
                Background="#CC000000"
                CornerRadius="18"
                Padding="20"
                Margin="0,0,0,25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BACK BUTTON -->
                    <Button
                        Content="â† Dashboard"
                        FontSize="14"
                        Padding="14,8"
                        CornerRadius="10"
                        Background="#FFD700"
                        Foreground="Black"
                        FontWeight="SemiBold"
                        Click="BackToMaintenanceDashboard"/>

                    <!-- TITLE -->
                    <TextBlock
                        Grid.Column="1"
                        Text="Machines"
                        FontSize="34"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- MACHINES LIST (SCROLLABLE) -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Visible"
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="700">

                <ItemsControl x:Name="MachinesListView">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:Machine">
                            <Border
        Background="White"
        CornerRadius="22"
        Padding="28"
        Margin="0,0,0,26"
        MaxWidth="1100"
        HorizontalAlignment="Center"
        BorderBrush="#FFD700"
        BorderThickness="1">

                                <StackPanel Spacing="14">

                                    <!-- HEADER ROW -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- PRODUCT -->
                                        <StackPanel>
                                            <TextBlock Text="Product"
                               FontSize="13"
                               Foreground="Gray"
                               FontWeight="SemiBold"/>

                                            <TextBlock Text="{x:Bind FirstDeliveryProductName}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="Black"/>
                                        </StackPanel>

                                        <!-- STATUS BADGE -->
                                        <Border Grid.Column="1"
                        Background="#000000"
                        CornerRadius="14"
                        Padding="14,6"
                        VerticalAlignment="Top">
                                            <TextBlock Text="{x:Bind Status}"
                               Foreground="#FFD700"
                               FontWeight="Bold"
                               FontSize="14"/>
                                        </Border>
                                    </Grid>

                                    <!-- INFO GRID -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- LOCATIE -->
                                        <StackPanel>
                                            <TextBlock Text="Locatie"
                               FontSize="13"
                               Foreground="Gray"/>
                                            <TextBlock Text="{x:Bind Locatie}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <!-- ADRES -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Delivery-adres"
                               FontSize="13"
                               Foreground="Gray"/>
                                            <TextBlock Text="{x:Bind FirstDeliveryAddress}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <!-- KLANT -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Klant"
                               FontSize="13"
                               Foreground="Gray"/>
                                            <TextBlock Text="{x:Bind FirstDeliveryCustomerName}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- DIVIDER -->
                                    <Border Height="1"
                    Background="#E6E6E6"
                    Margin="0,12"/>

                                    <!-- EXTRA INFO ROW -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="Machine-locatie"
                               FontSize="13"
                               Foreground="Gray"/>
                                            <TextBlock Text="{x:Bind Locatie}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Status"
                               FontSize="13"
                               Foreground="Gray"/>
                                            <TextBlock Text="{x:Bind Status}"
                               FontSize="16"
                               FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>

                                </StackPanel>
                            </Border>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
