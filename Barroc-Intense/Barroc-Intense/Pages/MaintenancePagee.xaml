<?xml version="1.0" encoding="utf-8"?>
<Page
    
    x:Class="Barroc_Intense.Pages.MaintenancePagee"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Barroc_Intense.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#AAFFFFFF"
                CornerRadius="20"
                Margin="80"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="40">

            <StackPanel Spacing="20">

                <TextBlock Text="Maintenance Dashboard"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Overzicht van storingsmeldingen"
                           FontSize="20"
                           FontStyle="Italic"
                           Foreground="Gray"
                           HorizontalAlignment="Center"/>

                <!-- Zoekbalk -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBox x:Name="SearchBox"
                             Width="300"
                             PlaceholderText="Zoeken op klant of product..."
                             Margin="0,0,10,0"/>
                    <Button Content="Zoeken"
                            Width="100"
                            Click="OnSearchClick"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            BorderThickness="0"
                            CornerRadius="5"/>
                </StackPanel>

                <!-- ListView met checkboxes -->
                <ListView x:Name="MaintenanceListView"
                          Margin="0,20,0,0"
                          Height="350"
                          BorderThickness="1"
                          BorderBrush="LightGray"
                          Background="White"
                          SelectionMode="None">

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Melding">
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Melding klaar"></TextBlock>
                                    <CheckBox IsChecked="{x:Bind IsOpgelost, Mode=TwoWay}" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind Datum}" FontWeight="Bold" />
                                        <TextBlock Text="{x:Bind Afdeling}" />
                                        <TextBlock Text="{x:Bind Klant}" />
                                        <TextBlock Text="{x:Bind Product}" />
                                        <TextBlock Text="{x:Bind Probleemomschrijving}" TextWrapping="Wrap" />
                                        <TextBlock Text="{x:Bind Status}" Foreground="DarkGreen" FontStyle="Italic" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Opslaan knop -->
                <Button Content="Opslaan"
                        Width="150"
                        HorizontalAlignment="Center"
                        Background="Black"
                        Foreground="Yellow"
                        FontWeight="Bold"
                        Click="OnSaveClick"
                        CornerRadius="5"
                        Margin="0,10,0,0"/>

                <!-- Quotes -->
                <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="“Grote dingen worden nooit gedaan door één persoon. Ze worden gedaan door een team.”"
                               FontSize="16"
                               Foreground="Black"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="“Succes is de som van kleine inspanningen, herhaald dag na dag.”"
                               FontSize="16"
                               Foreground="Black"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="“Innovatie onderscheidt leiders van volgers.”"
                               FontSize="16"
                               Foreground="Black"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>

            </StackPanel>
        </Border>
 
    </Grid>
</Page>