<Page
    x:Class="Barroc_Intense.Pages.IngredientListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:localData="using:Barroc_Intense.Data">

    <Grid>
        <!-- Achtergrond met verloop (branding / stijl) -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Yellow" Offset="0.0"/>
                <GradientStop Color="Black" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#EEFFFFFF"
                CornerRadius="10"
                Margin="30">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20" Spacing="15">

                    <TextBlock Text="Ingrediënten"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- ListView met DataTemplate gebonden aan Ingredient -->
                    <ListView x:Name="ingredientsListView">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="localData:Ingredient">
                                <!-- Elke ingrediënt wordt als kaart weergegeven -->
                                <Border Background="#FFFBEF"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="5">
                                    <StackPanel Orientation="Horizontal" Spacing="20">
                                        <!-- Naam van het ingrediënt -->
                                        <TextBlock Text="{x:Bind Name}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="Black"/>

                                        <!-- Vooraf geformatteerde hoeveelheid (bijv. '250 g') -->
                                        <TextBlock Text="{x:Bind AmountFormatted}"
                                                   FontSize="16"
                                                   Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button Content="⬅️ Terug naar de voorraad"
                            Click="BackButton_Click"
                            Background="Black"
                            Foreground="Yellow"
                            FontWeight="Bold"
                            Width="200"
                            Height="45"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            CornerRadius="10"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>