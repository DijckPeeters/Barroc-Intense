<Window
    x:Class="Barroc_Intense.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Barroc_Intense"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Barroc-Intense">

    <Frame x:Name="MainFrame">
        <Frame.Content>
            <Grid>
                <!-- Achtergrond gradient -->
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Yellow" Offset="0.0"/>
                        <GradientStop Color="Black" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Border Background="#AAFFFFFF"
                        CornerRadius="20"
                        Margin="100"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="40"
                                Spacing="15">

                        <!-- Header -->
                        <TextBlock Text="BARROC INTENSE"
                                   FontSize="64"
                                   FontWeight="Bold"
                                   Foreground="Yellow"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Slogan -->
                        <TextBlock Text="Sterk. Helder. Stimulerend."
                                   FontSize="28"
                                   FontStyle="Italic"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Ondertekst -->
                        <TextBlock Text="Groei, samenwerking en innovatie â€” de kern van Barroc Intens."
                                   FontSize="18"
                                   Foreground="Black"
                                   TextAlignment="Center"
                                   Width="600"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,30"/>

                        <!-- Knoppen -->
                        <Button Content="Inkoop Dashboard"
                                Width="200"
                                Height="50"
                                Background="Black"
                                Foreground="Yellow"
                                FontSize="20"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="InkoopDashboardButton_Click"/>

                        <Button Content="Login"
                                Width="200"
                                Height="50"
                                Background="Black"
                                Foreground="Yellow"
                                FontSize="20"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="LoginButton_Click"/>

                        <Button Content="Voorraad beheren"
                                Width="200"
                                Height="50"
                                Background="Black"
                                Foreground="Yellow"
                                FontSize="20"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="VoorraadButton_Click"/>

                  

                        <Button Content="Maintenance"
                                Width="200"
                                Height="50"
                                Background="Black"
                                Foreground="Yellow"
                                FontSize="20"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="MaintenanceButton_Click"/>

                        <Button Content="Klantenservice"
                                Width="200"
                                Height="50"
                                Background="Black"
                                Foreground="Yellow"
                                FontSize="20"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="KlantButton_Click"/>

                    </StackPanel>

                </Border>
            </Grid>
        </Frame.Content>
    </Frame>
</Window>
